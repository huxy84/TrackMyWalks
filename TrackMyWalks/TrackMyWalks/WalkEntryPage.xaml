<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrackMyWalks.WalkEntryPage"
             Title="Walk Entry Page" BackgroundColor="#303030">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <TableView>
            <TableSection>
                <EntryCell Label="Title" Placeholder="Trail Title" />
                <EntryCell Label="Notes" Placeholder="Description" />
                <EntryCell Label="Latitude" Placeholder="Latitude" Keyboard="Numeric" />
                <EntryCell Label="Longitude" Placeholder="Longitude" Keyboard="Numeric" />
                <EntryCell Label="Kilometers" Placeholder="Kilometers" Keyboard="Numeric" />
                <EntryCell Label="Difficulty Level:" Placeholder="Walk Difficulty" />
                <EntryCell Label="Image Url:" Placeholder="Image URL" />
            </TableSection>
        </TableView>
    </ContentPage.Content>
</ContentPage>